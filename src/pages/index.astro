---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Meliodas from "../components/Meliodas.astro";
import ModelS from "../components/ModelS.astro";
import Model3 from "../components/Model3.astro";
import ModelX from "../components/ModelX.astro";
import Cybertruck from "../components/Cybertruck.astro";
import ModelY from "../components/ModelY.astro";
import PowerWall from "../components/PowerWall.astro";
import Accesorios from "../components/Accesorios.astro";
---

<Layout title="Tesla - El Carro De Elon Mosco">
  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-y-auto overflow-x-hidden scroll-smooth"
  >
    <div class="snap-center">
      <Hero />
    </div>
    <div class="snap-center">
      <ModelY />
      <!-- <Meliodas /> -->
    </div>
    <div class="snap-center"> 
      <Model3 />
    </div>
    <div class="snap-center">
      <ModelS />
    </div>
    <div class="snap-center">
      <ModelX />
    </div>
    <div class="snap-center">
      <Cybertruck />
    </div>
    <div class="snap-center">
      <PowerWall />
    </div>
    <div class="snap-center">
      <Accesorios /> 
    </div>
  </main>
</Layout>